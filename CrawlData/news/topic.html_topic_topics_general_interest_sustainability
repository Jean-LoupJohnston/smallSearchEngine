<script type="text/javascript">
    $(document).ready(function(){
        $(".form_filter").change(function(){
            $("#news_list_1258672910Form").submit();
        });

        $("#news_list_1258672910Form").on("submit",function(e){
            var searchTerm = $("#thunderstone-search").val();
            if (searchTerm != "" && searchTerm.length < 2) {
                $("#searchTooShort").removeClass("hidden");
                return false;
            } else {
                $("#searchTooShort").addClass("hidden");
                return true;
            }
        });
    });
</script>


